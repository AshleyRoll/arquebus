#pragma once

#include "arquebus/semantic_version.hpp"

#include <string_view>


namespace arquebus {
  // Version number and the commit hash details from built library
  struct version_details
  {
    std::string_view version_string{ "@PROJECT_VERSION@" };
    std::string_view commit_hash{ "@GIT_HASH@" };
    std::string_view commit_short_hash{ "@GIT_HASH_SHORT@" };
    semantic_version version{semantic_version::parse("@PROJECT_VERSION@")};
  };

  // get the current library version
  inline auto version() -> version_details { return {}; }

}  // namespace arquebus
